<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/activity_add_event"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageButton
                android:id="@+id/homeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:onClick="goToMyHome"
                android:src="@drawable/left_btn"
                android:background="@color/red"
                android:textAllCaps="false"
                android:textColor="@color/red"/>

        </android.support.v7.widget.Toolbar>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add My Event"
            android:textColor="@color/red"
            android:typeface="serif"
            android:layout_marginTop="40dp"
            android:textSize="35sp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="90dp"
            android:id="@+id/title_layout"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/red"
                android:textSize="25sp"
                android:id="@+id/title_heading"
                android:layout_marginLeft="25dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:ems="10"
                android:layout_marginRight="10dp"
                android:textSize="25sp"
                android:layout_marginLeft="40dp"
                android:id="@+id/title"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:id="@+id/details_layout"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textColor="@color/red"
                android:textSize="25sp"
                android:id="@+id/details_heading"
                android:layout_marginLeft="25dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:ems="10"
                android:layout_marginRight="10dp"
                android:textSize="25sp"
                android:layout_marginLeft="20dp"
                android:id="@+id/details"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Event"
            android:background="@drawable/my_button_add"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="10dp"
            android:clickable="true"
            android:onClick="addEvent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"/>
    </LinearLayout>


</ScrollView>